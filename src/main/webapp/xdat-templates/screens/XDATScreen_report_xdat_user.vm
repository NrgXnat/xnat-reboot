                                    function addTag(t){
                                        var matched = false;
                                        for (var atx = 0; atx < alltags.length; atx++) {
                                            if (alltags[atx] == t) {
                                                matched = true;
                                                break;
                                            }
                                        }

                                        if (!matched) {
                                            alltags.push(t);
                                        }
                                    }

                                    function xdat_userGroup(id, name, tag){
                                        this.id = id;
