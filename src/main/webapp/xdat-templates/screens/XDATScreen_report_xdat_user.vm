                                    function addGroupToSelectedArray(g, t){
                                        var matched = false;
                                        var x = 0;
                                        for (var agsax = 0; agsax < selectedtags.length; agsax++) {
                                            if (selectedtags[agsax] == t) {
                                                matched = true;
